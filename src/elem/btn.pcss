button, .btn{
	
	border: none;
	border-radius: 2px;
	display: inline-block;
	height: 24px;
	line-height: 24px;
	padding: 0 16px;
	text-transform: uppercase;
	vertical-align: middle;
	-webkit-tap-highlight-color: transparent;
	cursor: pointer;
	transition: .3s ease-out;
	
	&:hover{
		background-color: #DFDFDF;
	}

}